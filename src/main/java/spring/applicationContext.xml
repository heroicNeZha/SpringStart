    <!--        注入对象属性类型-->
    <bean id="userDao" class="edu.ustc.SpringStart.dao.UserDao">
        <!--        数组-->
        <property name="arrs">
            <list>
                <value>小王</value>
                <value>小李</value>
            </list>
        </property>
        <!--        list-->
        <property name="list">
            <list>
                <value>大王</value>
                <value>大李</value>
            </list>
        </property>
        <!--        map-->
        <property name="map">
            <map>
                <entry key="aa" value="王"/>
                <entry key="bb" value="李"/>
            </map>
        </property>
        <!--        properties-->
        <property name="properties">
            <props>
                <prop key="cc">王</prop>
                <prop key="dd">李</prop>
            </props>
        </property>
    </bean>
